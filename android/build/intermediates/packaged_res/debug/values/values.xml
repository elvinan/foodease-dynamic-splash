<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="app_name">react-native-dynamic-splash</string>
    <style name="DynamicSplash_Animation">
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <!--背景颜色及透明程度-->
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="DynamicSplash_Fullscreen" parent="DynamicSplash_Theme">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="DynamicSplash_Theme" parent="Theme.AppCompat.NoActionBar">
         <item name="android:windowAnimationStyle">@style/DynamicSplash_Animation</item>
    </style>
</resources>